<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="miniCardPane" fx:id="cardPane" styleClass="mini-person-card" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER_LEFT">
        <padding>
            <Insets bottom="5" left="5" right="5" top="5" />
        </padding>
        <Label fx:id="name" styleClass="mini-cell-name-label" text="\$name" />
        <Label fx:id="school" styleClass="mini-cell-school-label" text="\$school" />
        <FlowPane fx:id="skills" styleClass="mini-skills-pane" />
    </VBox>
</HBox>
